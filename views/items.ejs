<title>Fruity Items</title>
<link rel="icon" href="icon.png" type="image/png" />
<link rel="stylesheet" href="style.css" />
<%- include('navbar') %>
<div class="add-button">
	<a href="/items/create">
		<button>Add Item</button>
	</a>
</div>
<div class="categories">
	<% items.forEach((item) => { %>
	<div class="category">
		<img src="<%= item.name %>.jpg" alt="" />
		<h3><%= item.name %></h3>
		<p><%= item.price %>$/KG</p>
	</div>
	<% }) %>
</div>
<%- include('footer') %>
