<title><%= title %></title>
<link rel="icon" href="/icon.png" type="image/png" />
<link rel="stylesheet" href="/style.css" />
<%- include('navbar') %> <% if (!category) { %>
<div class="form-element">
	<%- include("errors.ejs") %>
	<form action="/categories/create" method="post">
		<input
			type="text"
			name="categoryName"
			id="categoryName"
			placeholder="Category Name"
			class="form-input"
			required
		/>
		<button type="submit">Add Category</button>
	</form>
	<a href="/categories"><button>Back</button></a>
</div>
<% } else { %>
<div class="form-element">
	<%- include("errors.ejs") %>
	<form action="/categories/<%= category.name %>/edit" method="post">
		<input
			type="text"
			name="categoryName"
			id="categoryName"
			placeholder="Category Name"
			class="form-input"
			value="<%= category.name %>"
			required
		/>
		<button type="submit">Edit Category</button>
	</form>
	<a href="/categories"><button>Cancel</button></a>
</div>
<% } %> <%- include('footer') %>
